    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A simple example</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.css">
    <script type="text/javascript" src="scripts/tutorial_pannellum.js"></script>
    <style>
    #tutorial_box{
      position:fixed;
      display:flex;
      align-items:center;
      z-index: 1000;
      width: 100vw;
      height: 100vh;
    }
    #tutorial_text_box{
      background: #d6d6d6;
      border: 2px solid purple;
      display: inline-block;
      padding-left: 10px;
      padding-right: 10px;
      text-align: center;
      width: 15%;
    }
    #tutorial_text_box p{
      font-size: 18px;
    }
    #tutorial_next_button{
      display: inline-block;
      padding: 8px 5px;
      text-align: center;
      font-size: 20px !important;
      border-radius: 5px;
      margin-bottom: 5px;
      cursor: pointer;
      color: gray;
    }
    #tutorial_next_button:hover{
      color:gray;
    }
    #tutorial_next_button.blink_it{
      animation: next_blink 1s;
      animation-iteration-count: infinite;
    }
    main {
      max-width: 69vw !important;
    }
    #panorama {
    width: 100%;
    height: 100vh; 
    text-align: center;
    z-index: 999
    }
    
    #panorama.blink_it{
      border: 3px #fff solid;
      animation: blink 1s; 
      animation-iteration-count: infinite;
    }

    
  
    #controls {
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 2;
        text-align: center;
        width: 100%;
        padding-bottom: 20px;
    }
    .ctrl {
        position: relative;
        padding: 8px 5px;
        text-align: center;
        background: #6d6d6d;
        display: block;
        cursor: pointer;
        font-size: 20px;
    }
    .ctrl.blink_it {
      border: 3px #6d6d6d solid;
      animation: blink 1s; 
      animation-iteration-count: infinite;
    }
    .ctrl:hover {
        background: rgba(200, 200, 200, 1);
    }
    .wrapper {
      display:flex;
      width: 100%;
      align-items: stretch;
    }
    #sidebar {
      min-width: 250px;
      max-width: 250px;
      min-height: 100vh;
      background: #57068c;
      color: #fff;
    }
    #sidebar.blink_it {
      border: 3px #57068c solid;
      
      animation: blink 1s;
      animation-iteration-count: infinite;
    }
    
    #err p{
      color: #f00202;
    }
    #sidebar .sidebar-header{
      padding: 20px;
      background: #8900e1;
    }
    #sidebar ul.components {
      padding:20px 0;
      border-bottom: 1px solid #6d6d6d;
    }
    
    #sidebar ul li {
      padding-top: 10px;
    }
    
    ul.CTAs {
      padding: 15px;
    }
    .sctrl{
      position: relative;
      padding: 8px 5px;
      text-align: center;
      font-size: 20px !important;
      display: block;
      border-radius: 5px;
      margin-bottom: 5px;
      cursor: pointer;
    }
    .sctrl.blink_it {
      animation: blink 1s; 
      animation-iteration-count: infinite;
    }
    #tagSubmit.sctrl{
      background: #4fd84f;
      border: 3px solid #4fd84f;
    }
    #tagSubmit.sctrl:hover{
      background: #6bee6b;
    }
    #tagHelp.sctrl{
      background: #fff !important;
      color: #6d6d6d !important;
      border: 3px solid #fff;
    }
    #tagHelp.sctrl:hover{
      background: rgb(196, 192, 192) !important;
    }
    #YTplayer {
      max-width: 513px;
      max-height: 288.6px;
    }
    .content {
      max-width: 513px;
    }
    @media (max-width: 500px) {
      #YTplayer {
        max-width: 352px;
        max-height: 200px;
      }
      .content {
        max-width: 352px;
      }
    }

    @media (min-width: 992px) {
      #YTplayer {
        max-width: 673px;
        max-height: 378.6px;
      }
      .content {
        max-width: 673px;
      }
    }

    @media (min-width: 1200px) {
      #YTplayer {
        max-width: 833px;
        max-height: 468.6px;
      }
      .content {
        max-width: 833px;
      }
    }
    @keyframes blink { 50% { border: 3px solid yellow; }  }
    @keyframes next_blink {50% {background: yellow;}}
    </style>
</head>
<section id = 'tutorial_box'>
  <div id='tutorial_text_box'>
    <p id='tutorial_text'> Welcome! This short interactive tutorial will guide you on how to contribute to our project. </p>
    <br>
    <p id='tutorial_text_2'>When you are ready, press next.</p>
    
    <button id="tutorial_next_button" title="Blah Blah" disabled = true> Next</button>
  </div>
</section>
<body>
  <header>
    <div id='header'> <!-- header's z-index is 1030 always-->
      <%- include('../partials/header-'.concat(auth?'':'no').concat('auth')) %>
    </div>
